<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonToChat"
        android:layout_width="343dp"
        android:layout_height="77dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:onClick="onClickOpenChat"
        android:text="Чат с преподавателем"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToLessons" />

    <Button
        android:id="@+id/buttonToLessons"
        android:layout_width="343dp"
        android:layout_height="77dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:onClick="onCLickOpenLessons"
        android:text="Уроки"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUncleSam" />

    <Button
        android:id="@+id/buttonToStatistics"
        android:layout_width="343dp"
        android:layout_height="77dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Статистика"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:onClick="onClickOpenStatistic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToChat" />

    <Button
        android:id="@+id/buttonToEdit"
        android:layout_width="343dp"
        android:layout_height="77dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:onClick="onCLickOpenEditMenu"
        android:text="Добавить слова"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToStatistics" />

            <ImageView
                android:id="@+id/imageViewUncleSam"
                android:layout_width="376dp"
                android:layout_height="379dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/uncle_sam" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>